<Page
    x:Class="HostMCU.UWP.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HostMCU.UWP.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel>
        <Grid
            Margin="20"
            Padding="20"
            VerticalAlignment="Top"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            CornerRadius="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="Temp"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Run Text="{x:Bind homeViewModel.Temp_Text, Mode=OneWay}" />
                <Run Text=" ℃" />
            </TextBlock>
            <StackPanel Grid.Column="1">
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <TextBlock Margin="0,5,0,0">温度上限：</TextBlock>
                    <muxc:NumberBox
                        MinWidth="200"
                        SpinButtonPlacementMode="Inline"
                        Text="45" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,5,0,0">温度下限：</TextBlock>
                    <muxc:NumberBox
                        MinWidth="200"
                        SpinButtonPlacementMode="Inline"
                        Text="-10" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <TextBox
            x:Name="Content"
            MinHeight="200"
            MaxHeight="300"
            Margin="20"
            HorizontalAlignment="Stretch"
            AcceptsReturn="True"
            PlaceholderText="调试窗口"
            Text="{x:Bind homeViewModel.Content_Text, Mode=OneWay}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="Button_Click"
                Tag="SwitchLED">
                开关采光
            </Button>
            <Button
                Grid.Column="1"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="Button_Click"
                Tag="SwitchBuzzer">
                开关蜂鸣器
            </Button>
            <Button
                Grid.Column="2"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="Button_Click"
                Tag="SwitchFan">
                开关通风
                <Button.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="MenuFlyoutItem_Click"
                            Icon="Sync"
                            Text="切换转向" />
                    </MenuFlyout>
                </Button.ContextFlyout>
            </Button>
        </Grid>
    </StackPanel>
</Page>