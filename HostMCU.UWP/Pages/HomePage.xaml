<Page
    x:Class="HostMCU.UWP.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HostMCU.UWP.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <StackPanel>
        <Grid
            Margin="20"
            Padding="20"
            VerticalAlignment="Top"
            Background="{ThemeResource ControlFillColorDefaultBrush}"
            CornerRadius="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="Temp"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Run Text="{x:Bind homeViewModel.Temp_Text, Mode=OneWay}" />
                <Run Text=" ℃" />
            </TextBlock>
            <StackPanel Grid.Column="1">
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <TextBlock Margin="0,5,0,0">温度上限：</TextBlock>
                    <muxc:NumberBox
                        MinWidth="200"
                        SpinButtonPlacementMode="Inline"
                        Text="45" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Margin="0,5,0,0">温度下限：</TextBlock>
                    <muxc:NumberBox
                        MinWidth="200"
                        SpinButtonPlacementMode="Inline"
                        Text="-10" />
                </StackPanel>
            </StackPanel>
        </Grid>
        <TextBox
            x:Name="Content"
            MinHeight="200"
            MaxHeight="300"
            Margin="20"
            HorizontalAlignment="Stretch"
            AcceptsReturn="True"
            PlaceholderText="调试窗口"
            Text="{x:Bind homeViewModel.Content_Text, Mode=OneWay}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ToggleButton
                x:Name="SwitchLED"
                Grid.Column="0"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="ToggleButton_Click"
                Content="{Binding IsChecked, ElementName=SwitchLED, Converter={StaticResource FeatureStateToTextConverter}, ConverterParameter=SwitchLED}"
                Tag="SwitchLED" />
            <ToggleButton
                x:Name="SwitchBuzzer"
                Grid.Column="1"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="ToggleButton_Click"
                Content="{Binding IsChecked, ElementName=SwitchBuzzer, Converter={StaticResource FeatureStateToTextConverter}, ConverterParameter=SwitchBuzzer}"
                Tag="SwitchBuzzer" />
            <ToggleButton
                x:Name="SwitchFan"
                Grid.Column="2"
                MinHeight="100"
                Margin="20"
                HorizontalAlignment="Stretch"
                Click="ToggleButton_Click"
                Tag="SwitchFan"
                ToolTipService.ToolTip="右击切换转向">
                <ToggleButton.Content>
                    <StackPanel>
                        <TextBlock Text="{Binding IsChecked, ElementName=SwitchFan, Converter={StaticResource FeatureStateToTextConverter}, ConverterParameter=SwitchFan}" TextAlignment="Center" />
                        <TextBlock
                            FontSize="13"
                            Foreground="Gray"
                            Text="{Binding IsDoubleTapEnabled, ElementName=SwitchFanDirection, Converter={StaticResource FeatureStateToTextConverter}, ConverterParameter=SwitchFanDirection}"
                            TextAlignment="Center" />
                    </StackPanel>
                </ToggleButton.Content>
                <ToggleButton.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Name="SwitchFanDirection"
                            Click="MenuFlyoutItem_Click"
                            Icon="Sync"
                            Text="切换转向" />
                    </MenuFlyout>
                </ToggleButton.ContextFlyout>
            </ToggleButton>
        </Grid>
    </StackPanel>
</Page>